# DÃ©finition des couleurs pour l'affichage
BOLD = \033[1m
GREEN = \033[0;32m
YELLOW = \033[0;33m
BLUE = \033[0;34m
RED = \033[0;31m
MAGENTA = \033[0;35m
CYAN = \033[0;36m
COLOUR_RESET = \033[0m

# Dossier des fichiers objets
ODIR = obj

# Nom de l'exÃ©cutable
NAME = phonebook

# Fichiers sources et headers
SRCS =	main.cpp \
		Contact.cpp \
		Phonebook.cpp \
		ADD_utils.cpp \

HEADERS = header.hpp

# Fichiers objets
OFILES =	$(ODIR)/main.o \
			$(ODIR)/Contact.o \
			$(ODIR)/Phonebook.o \
			$(ODIR)/ADD_utils.o

# Compilateur et options
CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98

.PHONY: all clean fclean re

# RÃ¨gle principale
all: $(NAME)

# Compilation des fichiers objets
$(ODIR)/%.o: %.cpp $(HEADERS)
	@mkdir -p $(ODIR)
	@echo "$(YELLOW)$(BOLD)ðŸ’¾ Compilation de $<...$(COLOUR_RESET)"
	$(CC) $(CFLAGS) -c $< -o $@

# Edition de liens pour crÃ©er l'exÃ©cutable
$(NAME): $(OFILES)
	@echo "$(YELLOW)$(BOLD)ðŸ”— Edition des liens: $@$(COLOUR_RESET)"
	$(CC) $(CFLAGS) $(OFILES) -o $(NAME)
	@echo "$(GREEN)$(BOLD)ðŸŽŠ Compilation terminÃ©e avec succÃ¨s ! ðŸŽŠ$(COLOUR_RESET)"

# Suppression des fichiers objets
clean:
	@echo "$(RED)$(BOLD)ðŸ§¹ Suppression des fichiers objets...$(COLOUR_RESET)"
	@rm -rf $(ODIR)
	@echo "$(GREEN)$(BOLD)âœ”ï¸ Fichiers objets supprimÃ©s !$(COLOUR_RESET)"

# Suppression de l'exÃ©cutable et des fichiers objets
fclean: clean
	@echo "$(RED)$(BOLD)ðŸ—‘ï¸ Suppression de l'exÃ©cutable $(NAME)...$(COLOUR_RESET)"
	@rm -f $(NAME)
	@echo "$(GREEN)$(BOLD)âœ¨ Nettoyage terminÃ© ! âœ¨$(COLOUR_RESET)"

# Recompile tout proprement
re: fclean all
